<Window x:Class="QuizWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:QuizWPF"
        xmlns:view="clr-namespace:QuizWPF.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="920" WindowStyle="None" ResizeMode="NoResize" Background="Transparent" AllowsTransparency="True" >
    <Window.InputBindings>
        <KeyBinding Key="U" Modifiers="Control" Command="{Binding PlayerViewModel.UpdateButtonCommand}"/>
    </Window.InputBindings>

    <Border Background="WhiteSmoke"
            CornerRadius="20">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Grid.Column="1" x:Name="ContentGrid" Background="Transparent"/>

            <TextBlock Text="Quizzmo"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Foreground="Black"
                   FontSize="32" FontFamily="Courier New" Grid.Column="1" Margin="26,0,0,0" />

            <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>


                <StackPanel Grid.Row="1" VerticalAlignment="Center" Height="375">
                    <ui:Button
                    BorderThickness="0"
                    Appearance="Transparent"
                    FontSize="42"
                    Icon="{ui:SymbolIcon Symbol=Home20}" 
                    Height="75"
                    Width="75"
                    CornerRadius="0" 
                    MouseOverBackground="LightGray">
                    </ui:Button>
                    <ui:Button
                    BorderThickness="0"
                    Appearance="Transparent"
                    FontSize="42"
                    Icon="{ui:SymbolIcon Symbol=Play20}" 
                    Height="75"
                    Width="75"
                    CornerRadius="0"
                    MouseOverBackground="LightGray">
                    </ui:Button>
                    <ui:Button
                    BorderThickness="0"
                    Appearance="Transparent"
                    FontSize="42"
                    Icon="{ui:SymbolIcon Symbol=Settings20}" 
                    Height="75"
                    Width="75"
                    CornerRadius="0"
                    MouseOverBackground="LightGray">
                    </ui:Button>
                    <ui:Button
                    BorderThickness="0"
                    Appearance="Transparent"
                    FontSize="42"
                    Icon="{ui:SymbolIcon Symbol=ArrowExit20}" 
                    Height="75"
                    Width="75" 
                    CornerRadius="0"
                    MouseOverBackground="LightGray"/>
                </StackPanel>
                <Border Grid.Column="1" CornerRadius="25" Background="LightGray" Margin="0 0 10 10 ">
                    <view:PlayerView Margin="25"></view:PlayerView>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
